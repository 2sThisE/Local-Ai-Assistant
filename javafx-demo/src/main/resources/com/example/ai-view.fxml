<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<StackPane prefHeight="700.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.AiController">

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <!-- 메인 화면 -->
    <BorderPane>
        <!-- 좌측: 사이드바 -->
        <left>
            <VBox prefHeight="610.0" prefWidth="198.0" spacing="15" styleClass="sidebar">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="30" />
                </padding>
                <Label styleClass="sidebar-label" text="AI Assistant" />
                <VBox spacing="10">
                    <Button alignment="TOP_LEFT" maxWidth="Infinity" styleClass="sidebar-button" text="새 채팅" />
                    <!-- [MODIFIED] 설정 버튼에 액션 추가 -->
                    <Button alignment="TOP_LEFT" maxWidth="Infinity" onAction="#toggleSettings" styleClass="sidebar-button" text="설정" />
                    <Button alignment="TOP_LEFT" maxWidth="Infinity" styleClass="sidebar-button" text="도움말" />
                </VBox>
            </VBox>
        </left>

        <!-- 중앙: 채팅 화면 (WebView) -->
        <center>
            <VBox styleClass="chat-container">
                <WebView fx:id="webView" minHeight="400" VBox.vgrow="ALWAYS" />
                <VBox alignment="CENTER" prefHeight="0.0" prefWidth="1062.0" style="-fx-background-color: transparent;">
                    <HBox alignment="CENTER" spacing="10.0" styleClass="input-panel">
                        <padding>
                            <Insets bottom="10.0" left="20.0" right="15.0" top="10.0" />
                        </padding>
                  <Button alignment="CENTER" mnemonicParsing="false" styleClass="add-button" text="+" />
                        <TextField fx:id="inputField" onAction="#onSendMessage" promptText="무엇이든 물어보세요..." styleClass="chat-input" HBox.hgrow="ALWAYS" />
                        <Button fx:id="sendButton" onAction="#onSendMessage" styleClass="send-button" text="전송" />
                    </HBox>
               <padding>
                  <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
               </padding>
                </VBox>
            </VBox>
        </center>
    </BorderPane>

    <fx:include fx:id="settingsOverlay" source="settings-view.fxml" />
    

</StackPane>
