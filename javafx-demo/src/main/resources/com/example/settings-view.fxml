<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootBox" alignment="CENTER" style="-fx-background-color: rgba(0, 0, 0, 0.7);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.SettingsController">

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <VBox fx:id="settingsWindow" alignment="TOP_CENTER" minHeight="500.0" minWidth="600.0" spacing="0" style="-fx-background-color: #1E1E1E; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.5), 20, 0, 0, 0); -fx-overflow: hidden;">
        
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 15 20; -fx-border-color: transparent transparent #333333 transparent; -fx-border-width: 1;">
            <Label maxWidth="Infinity" styleClass="sidebar-label" text="설정 (Settings)" HBox.hgrow="ALWAYS" />
            <Button onAction="#closeSettings" style="-fx-background-color: transparent; -fx-text-fill: #9E9E9E; -fx-font-size: 16px; -fx-cursor: hand;" text="✕" />
        </HBox>
        
        <HBox VBox.vgrow="ALWAYS">
            
            <ListView fx:id="menuList" prefWidth="180.0" styleClass="settings-list-view" />

            <StackPane fx:id="contentArea" style="-fx-padding: 20;" HBox.hgrow="ALWAYS">
                
                <VBox fx:id="aiPanel" spacing="15" visible="true">
                    
                    <VBox spacing="5">
                       <Label style="-fx-text-fill: #E0E0E0; -fx-font-size: 18px; -fx-font-weight: bold;" text="AI 모델 설정" />
                       <Label style="-fx-text-fill: #9E9E9E;" text="올라마에 저장된 모델로 지정합니다." />
                        
                        <ComboBox fx:id="modelComboBox" editable="true" maxWidth="Infinity" promptText="모델 선택 또는 입력" styleClass="dark-combo-box" />
                    </VBox>
               <VBox prefHeight="200.0" prefWidth="100.0">
                  <children>
                     <Label style="-fx-text-fill: #E0E0E0; -fx-font-size: 18px; -fx-font-weight: bold;" text="모델 시스템 프롬프트">
                        <VBox.margin>
                           <Insets bottom="5.0" />
                        </VBox.margin>
                     </Label>
                     <TextArea fx:id="promptTextArea" prefHeight="200.0" prefWidth="200.0" promptText="프롬프트 입력" styleClass="prompt-text-area" />
                  </children>
               </VBox>
                </VBox>

                <VBox fx:id="toolPanel" spacing="15" visible="false">
                    <Label style="-fx-text-fill: #E0E0E0; -fx-font-size: 18px; -fx-font-weight: bold;" text="도구 설정" />
                    <Label style="-fx-text-fill: #9E9E9E;" text="채팅창의 글자 크기나 테마를 변경합니다." />
                    <Label style="-fx-text-fill: #757575;" text="(준비 중인 기능입니다)" />
                </VBox>

                <VBox fx:id="storagePanel" spacing="15" visible="false">
                    <Label style="-fx-text-fill: #E0E0E0; -fx-font-size: 18px; -fx-font-weight: bold;" text="저장소 설정" />
                    <Label style="-fx-text-fill: #9E9E9E;" text="대화 내역 저장소를 설정합니다." />
                    <Label style="-fx-text-fill: #757575;" text="(준비 중인 기능입니다)" />
                </VBox>

                <VBox fx:id="aboutPanel" spacing="15" visible="false">
                    <Label style="-fx-text-fill: #E0E0E0; -fx-font-size: 18px; -fx-font-weight: bold;" text="정보" />
                    <Label style="-fx-text-fill: #E0E0E0;" text="AI Assistant v1.0" />
                    <Label style="-fx-text-fill: #9E9E9E;" text="Created with JavaFX &amp; Ollama" />
                </VBox>

            </StackPane>
        </HBox>
    </VBox>
</VBox>